# Address map for block X

blockX = RegBlock.new(name: "blockX") do |blk|
  blk << Table.new("t1", reset_kinds: [:hard_reset], num_entries: 1024) do |t|
    t << Field.new(name: 'field0', nbits: 32, lsb_pos: 0, hard_reset: 0x0)
  end.offset(sw_map: 0x0)

  blk << Register.new("r1", reset_kinds: [:hard_reset]) do |r|
    r << Field.new(name: 'field0', nbits: 32, lsb_pos: 0, hard_reset: 0x0);
  end.offset(sw_map: 0x1000)
end

